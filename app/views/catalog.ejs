<!DOCTYPE html>
<html lang="fr">
<head>
  <%- include("partials/head") %>
  <!-- Meta -->
  <meta name="description" content="Parcourez le catalogue complet de la boutique oCoffee">
  <!-- Script -->
   <script defer src="/js/catalog.js"></script>
  <!-- Style -->
  <link rel="stylesheet" href="/css/catalog.css">
</head>
<body>
  <%- include("partials/header") %>
  <main>
    <section id="catalog">
      <h1>Notre catalogue</h1>
      <div class="articles only-display-3-articles" id="articles-list">
        <% coffees.forEach(coffee => { %>
          <article>
          <img
            src="/images/coffees/<%= coffee.reference %>.webp"
            alt="<%= coffee.name %>"
          />
          <div>
            <h2><%= coffee.name %></h2>
            <p>Origine <%= coffee.country %></p>
            <p><%= coffee.price_kg %> €/kg</p>
            <a class="button-outline" href="/catalogue/<%= coffee.id %>">Voir le détail</a>
          </div>
        </article>
        <% }); %>
      </div>

      <button class="button" id="see-all-products-button">
        Voir tous les produits
      </button>
    </section>
  </main>
<%- include("partials/footer") %>
</body>
</html>